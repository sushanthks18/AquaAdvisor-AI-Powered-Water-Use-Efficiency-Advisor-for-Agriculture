# Database
DATABASE_URL=sqlite:///instance/aquaadvisor.db

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Land Records API Configuration
# Tamil Nadu Land Records (TNREGINET)
TN_LAND_RECORDS_API=https://tnreginet.gov.in/api/v1
LAND_RECORDS_API_KEY=your-api-key-from-tnreginet

# National Land Records API (Alternative)
NATIONAL_LAND_RECORDS_API=https://landrecords.gov.in/api/v1

# Development Mode - Set to False in production to use real APIs
USE_MOCK_LAND_RECORDS=True

# SMS/Email (Optional - for production)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890
SENDGRID_API_KEY=your_sendgrid_key

# Redis (Optional - for rate limiting)
REDIS_URL=redis://localhost:6379/0

# Weather API
OPENWEATHER_API_KEY=your-openweather-api-key

# Sentinel Hub (Satellite Imagery)
SENTINEL_USERNAME=your-sentinel-username
SENTINEL_PASSWORD=your-sentinel-password

# Flask
FLASK_ENV=development
FLASK_DEBUG=True